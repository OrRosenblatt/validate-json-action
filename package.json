  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-circus": "^30.2.0",
    "lint-staged": "^16.1.3",
    "prettier": "^3.6.2",
